        </div>
      </div>
    </div>
  </section>

  <!-- Social Media Platforms -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="heading-2 mb-6">Social Platforms</h2>
        <p class="text-xl text-slate-400 max-w-2xl mx-auto">
          Follow along for different types of content across various platforms
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {socialMedia.map((platform) => (
          <a 
            href={platform.url}
            target="_blank"
            rel="noopener noreferrer"
            class="card card-hover-cyan group block"
          >
            <!-- Platform Header -->
            <div class="flex items-center justify-between mb-4">
              <div class="text-3xl group-hover:scale-110 transition-transform duration-200">
                {platform.icon}
              </div>
              <span class="text-xs px-2 py-1 rounded-full bg-cyan-400/20 text-cyan-400 border border-cyan-400/30">
                {platform.stats}
              </span>
            </div>
            
            <!-- Platform Info -->
            <div class="space-y-3">
              <div>
                <h3 class="text-lg font-semibold group-hover:text-cyan-400 transition-colors">
                  {platform.name}
                </h3>
                <p class="text-sm text-slate-400">{platform.username}</p>
              </div>
              
              <p class="text-slate-400 text-sm leading-relaxed">
                {platform.description}
              </p>
            </div>
            
            <!-- Follow Button -->
            <div class="mt-6 pt-4 border-t border-slate-700">
              <div class="flex items-center justify-between">
                <span class="text-sm text-slate-400">Follow for updates</span>
                <svg class="w-4 h-4 text-slate-400 group-hover:text-cyan-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
